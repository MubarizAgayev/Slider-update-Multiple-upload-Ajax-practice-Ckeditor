@model SliderInfo
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="container" style="margin-left:300px;margin-top:100px">
    <div class="slider-content">
        <img src="~/img/@Model.SignatureImage" />
    </div><br />
    <label>Tittle:</label>
    <h1>@Html.Raw(Model.Title)</h1><br />
    <label>Description:</label>
    <h1>@Html.Raw(Model.Description)</h1>
    <a class="btn btn-outline-info mt-5" asp-action="Index">Back</a>
</div>

